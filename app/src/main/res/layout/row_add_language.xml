<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle"
        android:elevation="2dp"
        android:gravity="center"
        android:hint="@string/bobot"
        android:inputType="numberDecimal"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#DCDCDC"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exp_spinner"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/exp_spinner"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/exp_spinner_masa"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle"
        android:elevation="2dp"
        android:entries="@array/masa"
        android:gravity="center"
        android:paddingStart="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bt_cancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        android:gravity="center"
        android:hint="@string/bobot"
        android:textAlignment="center"
        android:src="@drawable/cross"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exp_spinner_masa"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>